extend ../layout/_section

//-
	Главная странциа
	Секци "Наши выпускники"

mixin grauate( args )
	.graduates__item.item: .row.middle-xs
		.col-xs-12.col-sm-4
			img.foto( src="#", data-lazy=args.foto, alt=args.name )
		.col-xs-12.col-sm-8: .overlay
			h3.name #{args.name}
			p.specialty #{args.specialty}
			p.excerpt #{args.excerpt}

block variables
	-
		section_title = 'Наши выпускники';
		section_class = 'graduates';
		section_id = 'graduates';

