extend ../layout/_section

//-
	Главная страница
	Секция "Специальности"

mixin specialties_entry( args )
	.col-xs-12.col-sm-4
		a.specialties__entry.entry( href="#", role="listitem" )
			img.wp-post-thumbnail.lazy( src="#", data-src=args.thumbnail, alt=args.title )
			.title #{args.title}

block variables
	-
		section_class = 'specialties';
		section_id = 'specialties';
		section_name = 'Специальности';

block body
	.row( role="list" )
		+specialties_entry( { thumbnail: src.img+'specialties/akit.jpg', title: 'Автоматизация и компьютерно-интегрированные технологии' } )
		+specialties_entry( { thumbnail: src.img+'specialties/automation.jpg', title: 'Компьютерно-интегрированные технологические процессы и производства' } )
		+specialties_entry( { thumbnail: src.img+'specialties/control.jpg', title: 'Автоматизированное управление технологическими процессами' } )